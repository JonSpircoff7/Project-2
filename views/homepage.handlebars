<div class="homepage">
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <a class="title" href="/">ProjectSpot</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
          <a href="/profile">My Account</a>
          |
          <button class="no-button" id="logout">Logout</button>
        {{else}}
          <a href="/login">Login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Rendered view -->
      <!-- Loop over each object in the projects array -->
      {{#each projects as |project|}}
        <div class="row mb-4 project">
          <div class="card" style="width: 18rem;">
            <img src="..." class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                {{project.name}}</h5>
              <p class="card-description">{{project.description}}</p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">{{format_date
                  project.date_created
                }}</li>
              <li class="list-group-item"><span
                  class="dollar-amount"
                >{{format_amount project.needed_funding}}</span>
                needed!</li>
              <li class="list-group-item">Created by
                {{project.user.name}}</li>
            </ul>
            <div class="card-body">
              <a href="#" class="card-link"><a
                  href="/project/{{project.id}}"
                >Card link</a></a>
              <a href="#" class="card-link">Another link</a>
            </div>
          </div>
        </div>
      {{/each}}
    </main>
  </div>
  <footer>

  </footer>
</div>

<!-- Render script for logged in users only -->
{{#if logged_in}}
  <script src="/js/logout.js"></script>
{{/if}}