<div class="container login-bk">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <div id="first myform">
        <div class="form">
          <div class="logo mb-3">
            <div class="col-md-12 text-center">
              <h1>Login</h1>
            </div>
          </div>
          <form class="form login-form">
            <div class="form-group">
              <label for="email-login">Email address</label>
              <input
                type="email"
                class="form-input"
                id="email-login"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group">
              <label for="password-login">Password</label>
              <input
                type="password"
                id="password"
                class="form-input"
                placeholder="Enter Password"
              />
            </div>
            <div class="form-group">
              <p class="text-center">By signing up you accept our
                <a href="./terms.handlebars">Terms Of Use</a></p>
            </div>
            <div class="col-md-12 text-center">
              <button
                type="submit"
                class="btn btn-block mybtn btn-primary tx-tfm"
              >Login</button>
            </div>
            <div class="col-md-12">
              <div class="login-or">
                <hr class="hr-or" />
                <span class="span-or">or</span>
              </div>
            </div>
            <div class="col-md-12 mb-3">
              <p class="text-center">
                <a href="javascript:void();" class="google btn mybtn"><i
                    class="fa fa-google-plus"
                  >
                  </i>
                  Signup using Google
                </a>
              </p>
            </div>
            <div class="form-group">
              <p class="text-center">Don't have account?
                <a href="./signup" id="signup">Sign up here</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="./js/login.js"></script>